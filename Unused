public class Hero
{
    private String name;
    private int gold;
    public Hero(String n,int g)
        {
        name=n;
        gold=g;
        }
    public String getName()
        {
        return name;
        }
    public void setName(String name)
        {
        this.name = name;
        }
        public int getGold()
        {
        return gold;
        }
    public void setGold(int gold)
        {
        this.gold = gold;
        }
// public static void test()
// {
//     System.out.println("test");
// }

}
